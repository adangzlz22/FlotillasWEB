
<div class=row>
    <div class="col-lg-10"></div>
    <div class="col-lg-2"> <button id="btnAgregar" class="btn btn-success" data-toggle="modal" data-target="#modalChoferes">Agregar</button></div>
</div>
<div class="col-lg-12 table-responsive table-bordered">
    <br />
    <table id="tblChoferes" class="table-bordered stripe order-column" style="width: 100%;"></table>
</div>


<input type="text" id="idEmpresa" value="@ViewBag.idEmpresa" style="display: none;">


<div class="modal fade" id="modalChoferes" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header modal-bg" style="background-color:#005eff;color:#fff">
                Agregar Empresa y Usuario Administrador
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <div class="text-center">
                    <h3><label id="titleCurso"></label></h3>
                </div>
            </div>
            <div class="modal-body">
                <div class="row">
                     <div class="col-sm-12 col-md-12 col-lg-12" style="display: none;">
                        <div class="input-group">
                            <span class="input-group-addon">Empresa</span>
                            <input id="cboEmpresa" class="form-control" value="@ViewBag.idEmpresa"/>
                        </div>
                    </div>
                    <br>
                    <br>

                    <div class="col-sm-12 col-md-12 col-lg-12">
                        <div class="input-group">
                            <span class="input-group-addon">Nombre</span>
                            <input id="txtNombre" class="form-control" />
                        </div>
                    </div>
                    <br>
                    <br>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="input-group">
                            <span class="input-group-addon">Apeido Paterno</span>
                            <input id="txtApeidoPaterno" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="input-group">
                            <span class="input-group-addon">Aperido Materno</span>
                            <input id="txtApeidoMaterno" class="form-control" />
                        </div>
                    </div>
                    <br>
                    <br>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="input-group">
                            <span class="input-group-addon">Usuario</span>
                            <input id="txtUsuario" class="form-control" />
                        </div>
                    </div>
                    <br>
                    <br>
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <div class="input-group">
                            <span class="input-group-addon">Contrasena</span>
                            <input type="password" id="txtContrasena" class="form-control" />
                        </div>
                    </div>




                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-success" id="btnGuardarChoferes">Guardar</button>
                </div>
            </div>
        </div>
    </div>







    <script src="~/Scripts/utilitis.js"></script>
    <script src="~/Scripts/service.js"></script>
    <script src="../Scripts/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/DataTables/datatables.js"></script>
    <script src="~/Scripts/DataTables/datatables.min.js"></script>
    <script src="~/Scripts/Controllers/ChoferesControllers.js"></script>
    <script type="text/javascript">
        (function () {
            var clsChoferesControllers = new ChoferesControllers();
            clsChoferesControllers.Inicializar();
        })();
    </script>
