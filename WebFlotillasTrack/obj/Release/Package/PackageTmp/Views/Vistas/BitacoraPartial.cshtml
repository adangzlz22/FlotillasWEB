
<link href="~/Scripts/fulcallendar/main.css" rel="stylesheet" />
<script src="~/Scripts/fulcallendar/main.js"></script>
<div class=row>

    @{
        if (ViewBag.idNivel == 0)
        {
            <div class="col-lg-10">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <div class="input-group">
                        <span class="input-group-addon">Empresa</span>
                        <select id="cboEmpresa" class="form-control">
                        </select>
                    </div>
                </div>
            </div>
        }
    }
    <br><br>
    <input id="nptEmpresaID" value="@ViewBag.idEmpresa" type="text" style="display: none;">
    <div class="col-lg-10">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="input-group">
                <span class="input-group-addon">Usuario</span>
                <select id="cboUsuario" class="form-control">
                </select>
            </div>
        </div>
    </div>
    @* <div class="col-lg-2"> <button id="btnAgregar" class="btn btn-success" data-toggle="modal" data-target="#modalChoferes">Agregar</button></div> *@
</div>
<br>
<div class="col-lg-12 table-responsive table-bordered">
    <br />
    <table id="tblBitacora" class="table-bordered stripe order-column" style="width: 100%;"></table>
</div>
    <br>
    <br>

<div>
    <div id="calendar" >
    </div>
</div>


<div class="modal fade" id="modalChoferes" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header modal-bg" style="background-color:#005eff;color:#fff">
                Editar Bitacora
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <div class="text-center">
                    <h3><label id="titleCurso"></label></h3>
                </div>
            </div>
            <div class="modal-body">
                <div class="row">
                     <div class="col-sm-12 col-md-12 col-lg-12">
                        <div class="input-group">
                            <span class="input-group-addon">Estado</span>
                            <select id="cboEstado">
                                <option value="1">ON DUTY</option>
                                <option value="2">DRIVE</option>
                                <option value="3">OFF</option>
                                <option value="4">SB</option>
                            </select>
                        </div>
                    </div>
                    <br>
                    <br>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-success" id="btnGuardar">Guardar</button>
                </div>
            </div>
        </div>
    </div>





<script src="~/Scripts/utilitis.js"></script>
<script src="~/Scripts/service.js"></script>
<script src="../Scripts/jquery/jquery-3.2.1.min.js"></script>
<script src="~/Scripts/DataTables/datatables.js"></script>
<script src="~/Scripts/DataTables/datatables.min.js"></script>
<script src="~/Scripts/Controllers/BitacoraControllers.js"></script>
<script type="text/javascript">
    (function () {
        var clsBitacoraControllers = new BitacoraControllers();
        clsBitacoraControllers.Inicializar();
    })();
</script>
